# =============================================================================
# TPRIMAT Benchmark Configuration
# =============================================================================
# This config ensures EQUAL settings for AMD vs NVIDIA comparison

# Paths
DATA_DIR=/data/tprimat
OUTPUT_DIR=./output
HF_HOME=./cache
HF_DATASETS_CACHE=./cache/datasets

# Dataset: bc (BookCorpus) or c4
DATASET=bc

# =============================================================================
# Training Hyperparameters (EQUAL for both platforms)
# =============================================================================
SEED=42
MBS=1                    # Micro batch size per GPU
SL=2048                  # Sequence length
LR=3.0e-4                # Peak learning rate
WEIGHT_DECAY=0.1
BETA1=0.9
BETA2=0.95
WARMUP_STEPS=50          # LR warmup steps
TRAIN_ITERS=500          # Total training iterations
DATA_SAMPLES=50000
TRAIN_SPLIT=0.8

# =============================================================================
# Precision Settings (EQUAL for fair comparison)
# =============================================================================
PRECISION=bf16           # Both use BF16


# =============================================================================
# Parallelism (EQUAL for both platforms)
# =============================================================================
TP=1                     # Tensor Parallel
PP=1                     # Pipeline Parallel
DP=8                     # Data Parallel (8 GPUs)
GA=8                     # Gradient Accumulation
# Global Batch Size = MBS * DP * GA = 1 * 8 * 8 = 64

# =============================================================================
# Profiling (optional)
# =============================================================================
PROFILING=false
PROFILE_WAIT=5
PROFILE_WARMUP=1
PROFILE_ACTIVE=2
PROFILE_REPEAT=1
