# identical_config 01 - shared defaults
DATA_DIR=/data/tprimat
OUTPUT_DIR=${ROOT_DIR:-.}/output
HF_HOME=${ROOT_DIR:-.}/cache
HF_DATASETS_CACHE=${ROOT_DIR:-.}/cache/datasets

# Training defaults
SEED=42
MBS=1
SEQ_LEN=2048
LR=3.0e-4
WEIGHT_DECAY=0.1
BETA1=0.9
BETA2=0.95
PRECISION=bf16
FP8_HYBRID=false
FP8_PARAM=false
WARMUP_STEPS=50
TRAIN_ITERS=500
DATA_SAMPLES=500000

# Profiling
PROFILING=false
PROFILE_WAIT=5
PROFILE_WARMUP=1
PROFILE_ACTIVE=2
PROFILE_REPEAT=1

# Note: TP/PP/DP/GRAD_ACCUM/GBS are model-specific and hardcoded in each script
# llama (nvidia & amd): TP=4, PP=1, DP=2, GRAD_ACCUM=64, GBS=512
# qwen  (nvidia & amd): TP=4, PP=2, DP=1, GRAD_ACCUM=128, GBS=1024
